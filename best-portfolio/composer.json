{
    "name": "chrisbrock/best-portfolio",
    "description": "A professional portfolio and gallery management system for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris Brock",
            "email": "chris@chrisbrock.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "BestPortfolio\\": "includes/",
            "BestPortfolio\\Admin\\": "includes/admin/",
            "BestPortfolio\\Portfolio\\": "includes/Portfolio/",
            "BestPortfolio\\Licensing\\": "includes/licensing/",
            "BestPortfolio\\Public\\": "includes/Public/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    }
}
